# Kubernetes Deployment Configuration
# Copy this file to .env and update with your values

# Domain Configuration
DOMAIN=yourdomain.com
ACME_EMAIL=admin@yourdomain.com

# Database Passwords (base64 encode these values)
POSTGRES_PASSWORD=your-secure-postgres-password
MYSQL_ROOT_PASSWORD=your-secure-mysql-password
GRAFANA_PASSWORD=your-secure-grafana-password

# Storage Configuration
DEFAULT_STORAGE_SIZE=10Gi
DATABASE_STORAGE_SIZE=20Gi
MONITORING_STORAGE_SIZE=15Gi

# Resource Limits
POSTGRES_MEMORY_LIMIT=2Gi
MYSQL_MEMORY_LIMIT=2Gi
GRAFANA_MEMORY_LIMIT=1Gi
PROMETHEUS_MEMORY_LIMIT=2Gi

# Replica Counts
POSTGRES_REPLICAS=1
MYSQL_REPLICAS=1
REDIS_REPLICAS=1
GRAFANA_REPLICAS=1
PROMETHEUS_REPLICAS=1

# Application Configuration
BASEROW_PUBLIC_URL=http://baserow.yourdomain.com
NOCODB_PUBLIC_URL=http://nocodb.yourdomain.com
OPENWEBUI_PUBLIC_URL=http://openwebui.yourdomain.com

# Monitoring Configuration
PROMETHEUS_RETENTION=30d
GRAFANA_ALLOW_SIGNUP=false

# TLS/SSL Configuration
ENABLE_TLS=true
CERT_MANAGER_ISSUER=letsencrypt-prod